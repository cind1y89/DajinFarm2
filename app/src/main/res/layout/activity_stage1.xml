<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stage1"
    android:background="@drawable/background4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/button_yes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/stage2_dis"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/button_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cal2" />

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="185dp"
            android:layout_height="55dp"
            android:background="@drawable/cal3"
            android:gravity="end|center"
            android:text=""
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22" />

        <TextView
            android:id="@+id/textView_num8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="8"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num9"
            app:layout_constraintEnd_toStartOf="@+id/textView_num9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num7"
            app:layout_constraintTop_toTopOf="@+id/textView_num9" />

        <TextView
            android:id="@+id/textView_num9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="9"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_add"
            app:layout_constraintEnd_toStartOf="@+id/textView_add"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num8"
            app:layout_constraintTop_toTopOf="@+id/textView_add" />

        <TextView
            android:id="@+id/textView_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView_minus"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num9"
            app:layout_constraintTop_toBottomOf="@+id/textView_amount"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView_mult"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="*"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView_div"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num3"
            app:layout_constraintTop_toBottomOf="@+id/textView_minus" />

        <TextView
            android:id="@+id/textView_num7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="7"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num8"
            app:layout_constraintEnd_toStartOf="@+id/textView_num8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/textView_num8" />

        <TextView
            android:id="@+id/textView_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="-"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView_mult"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num6"
            app:layout_constraintTop_toBottomOf="@+id/textView_add" />

        <TextView
            android:id="@+id/textView_div"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="/"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_equal"
            app:layout_constraintTop_toBottomOf="@+id/textView_mult" />

        <TextView
            android:id="@+id/textView_equal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="="
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_div"
            app:layout_constraintEnd_toStartOf="@+id/textView_div"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_clear"
            app:layout_constraintTop_toTopOf="@+id/textView_div" />

        <TextView
            android:id="@+id/textView_num6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="6"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_minus"
            app:layout_constraintEnd_toStartOf="@+id/textView_minus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num5"
            app:layout_constraintTop_toTopOf="@+id/textView_minus" />

        <TextView
            android:id="@+id/textView_num3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_mult"
            app:layout_constraintEnd_toStartOf="@+id/textView_mult"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num2"
            app:layout_constraintTop_toTopOf="@+id/textView_mult" />

        <TextView
            android:id="@+id/textView_num2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num3"
            app:layout_constraintEnd_toStartOf="@+id/textView_num3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num1"
            app:layout_constraintTop_toTopOf="@+id/textView_num3" />

        <TextView
            android:id="@+id/textView_num5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="5"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num6"
            app:layout_constraintEnd_toStartOf="@+id/textView_num6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num4"
            app:layout_constraintTop_toTopOf="@+id/textView_num6" />

        <TextView
            android:id="@+id/textView_num4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num5"
            app:layout_constraintEnd_toStartOf="@+id/textView_num5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/textView_num5" />

        <TextView
            android:id="@+id/textView_num1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num2"
            app:layout_constraintEnd_toStartOf="@+id/textView_num2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/textView_num2" />

        <TextView
            android:id="@+id/textView_num0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_clear"
            app:layout_constraintEnd_toStartOf="@+id/textView_clear"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/textView_clear" />

        <TextView
            android:id="@+id/textView_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cal4"
            android:gravity="center"
            android:text="CE"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView_equal"
            app:layout_constraintEnd_toStartOf="@+id/textView_equal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_num0"
            app:layout_constraintTop_toTopOf="@+id/textView_equal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/map"
        android:contentDescription="@string/error" />

</androidx.constraintlayout.widget.ConstraintLayout>